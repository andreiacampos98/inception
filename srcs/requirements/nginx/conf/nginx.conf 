#https://www.digitalocean.com/community/tutorials/understanding-nginx-server-and-location-block-selection-algorithms
server 
{
    listen                  443 ssl;
    listen                  [::]:443 ssl;
    server_name             anaraujo.42.fr;

    # SSL
    ssl_certificate         //etc/nginx/ssl/anaraujo.crt;
    ssl_certificate_key     /etc/nginx/ssl/anaraujo.key;

    # Encryption protocol for SSL keys
	ssl_protocols		    TLSv1.2 TLSv1.3;
    
    root                    /var/www/html;
    # index.php
    index                   index.php;

    # security
    include                 nginxconfig.io/security.conf;

    # logging
    access_log              /var/log/nginx/access.log combined buffer=512k flush=1m;
    error_log               /var/log/nginx/error.log warn;


    # index.php fallback
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # additional config
    include nginxconfig.io/general.conf;
    include nginxconfig.io/example.com.wordpress.conf;

    # handle .php
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php-fpm.sock;
        include      nginxconfig.io/php_fastcgi.conf;
    }

    #nao sei para que serve
    location / {
        root /data/www;
    }

    location /images/ {
        root /data;
    }
}